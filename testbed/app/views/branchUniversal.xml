<Alloy>
	<Window id="window" class="container">
        <View class="first-section">
            <Button class="first-section-btn first-layer menu-left" title="init BUO" id="initBranchButton"/>
            <Button class="first-section-btn first-layer menu-right" title="register View" id="registerViewButton"/>
        </View>
        <View class="second-section">
            <Button class="second-section-btn first-layer" title="generate Url" id="generateUrlButton"/>
            <Button class="second-section-btn second-layer" title="share Sheet" id="shareSheetButton"/>
            <TextField class="second-section-textfield first-layer menu-left" id="aliasTextField"/>
        </View>
        <View class="third-section">
            <TextArea class="third-section-textarea first-layer menu-left" id="linkTextArea"/>
            <Button class="third-section-btn first-layer" title="Copy to Clipboard" id="copyButton"/>
        </View>
    </Window>
</Alloy>
